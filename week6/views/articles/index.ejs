<%- include ../partials/header.ejs %>

<main class="container">

    <h1>Articales</h1>
    <a href="/articles/add">Add a new Article</a>
    <ul class="list-group">
        <% for (var i = 0; i < articles.length; i++) { %>
            <li class="list-group-item"> 
                <a href="/articles/<%= articles[i]._id %>" title="Edit Articles">
                    <%= articles[i].title %>
                </a>
            <br />
            <%= articles[i].created.toDateString() %>
        
        </li>
        <% } %>
    </ul>

</main>

  </body>
</html>